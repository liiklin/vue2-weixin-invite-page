@import "../base"

.bg
  position absolute
  width 100%
  height 100%
  overflow hidden
  z-index -1
  img
    position absolute
    width 100%
    height 100%

#header
  text-align center
  padding 20px 0
  color #fff
  div
    &:nth-child(1)
      padding-bottom 10px
  span
    font-size 16px
  img
    width 75px
    height 75px
    border-radius 50%
    border #ffffff 3px solid

#body
  text-align center
  img
    width 180px
    height 180px

#footer
  position absolute
  width 100%
  text-align center
  color #fff
  font-size 12px
  bottom 40px
  z-index 999
  i
    color #ffd325
    font-size 50px
    padding 10px 0
  div
    padding 10px 0
